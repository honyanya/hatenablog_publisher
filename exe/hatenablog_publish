#!/usr/bin/env ruby

require 'hatenablog_publisher'
require 'optparse'
require 'active_support/core_ext/hash'

args = ARGV.getopts('du:s:f:a:t',
                    'draft',
                    'user:',
                    'site:',
                    'ad_type:',
                    'ad_file:',
                    'filename:',
                    'trace').symbolize_keys

HatenablogPublisher.publish(args)
